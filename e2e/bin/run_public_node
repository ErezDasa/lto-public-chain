#!/usr/bin/env bash

set -Cue -o pipefail

PROJECT_DIR="$(cd "$(dirname "${0}")/../.." ; pwd)"  # Absolute path to project
PUBLIC_NODE_DIR="${PROJECT_DIR}/public_node_docker"  # Absolute path to public node

(
  cd "$PROJECT_DIR"

  docker build . -t ltonetwork/public-node:dev
  docker run -p 6869:6869 -e LTO_NETWORK=CUSTOM -e LTO_ENABLE_REST_API=true ltonetwork/public-node:dev -e LTO_API_KEY=open
)